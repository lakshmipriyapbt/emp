FROM node:18 AS build

WORKDIR /ems-fe

COPY ui/package*.json ./

RUN npm install

COPY ui /ems-fe

RUN npm run build

FROM nginx:1.25.0-alpine

COPY  ui/nginx.conf /etc/nginx/conf.d/default.conf

COPY --from=build /ems-fe/build /usr/share/nginx/html

EXPOSE 3000

CMD ["nginx", "-g", "daemon off;"]

