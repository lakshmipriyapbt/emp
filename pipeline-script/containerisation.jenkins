pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                script {
                    sh 'sudo docker compose -f /docker/containerisation.jenkins build'
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    sh 'sudo docker compose -f /docker/containerisation.jenkins up -d'
                }
            }
        }
    }
    post {
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed.'
        }
    }
}
